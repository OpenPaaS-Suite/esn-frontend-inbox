tags-input.inbox-tags-input(
  ng-model='tags',
  display-property='name',
  key-property='email',
  placeholder="{{ 'Name or email address' | translate }}",
  replace-spaces-with-dashes='false',
  on-tag-adding="onTagAdding($tag)",
  on-tag-added="onTagAdded($tag)",
  on-tag-removed="onTagRemoved($tag)",
  enable-editing-last-tag="true",
  min-length="1",
  ng-class="addClass",
  template='{{"/unifiedinbox/views/composer/recipients-autocomplete-input-tag.html"}}'
)
  auto-complete(
    source='search($query)',
    min-length='1',
    debounce-delay='200',
    max-results-to-show= '20',
    template="/views/modules/auto-complete/attendees.html"
  )
